<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".Activity.MainActivity">

    <View
        android:id="@+id/view_blur"
        android:background="#6d000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/container_opening"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/toolbar" />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_container_tittle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="49dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:text="Results"
        android:gravity="center"
        android:textSize="16sp" />

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ly_container_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_ayo_membaca"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_benar"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_container_tittle"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/green_500" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Benar"
            android:textColor="@color/grey_800"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_benar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/red_500" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Salah"
            android:textColor="@color/grey_800"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/ly_container_tittle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ly_kalimat_main1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_word_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_l" />

            <ImageView
                android:id="@+id/img_word_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_e" />

            <ImageView
                android:id="@+id/img_word_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_b" />

            <ImageView
                android:id="@+id/img_word_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_a" />

            <ImageView
                android:id="@+id/img_word_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_h" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_kalimat_main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img_word_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_m" />

            <ImageView
                android:id="@+id/img_word_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_a" />

            <ImageView
                android:id="@+id/img_word_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_k" />

            <ImageView
                android:id="@+id/img_word_9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_a" />

            <ImageView
                android:id="@+id/img_word_10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_n" />

            <ImageView
                android:id="@+id/img_word_10_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_i" />

            <ImageView
                android:id="@+id/img_word_10_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_n" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_kalimat_tambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_word_tambahan1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/letter_d" />

        <ImageView
            android:id="@+id/img_word_tambahan2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/letter_i" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_kalimat_main3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img_word_11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_k" />

            <ImageView
                android:id="@+id/img_word_12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_e" />

            <ImageView
                android:id="@+id/img_word_13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_l" />

            <ImageView
                android:id="@+id/img_word_14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_e" />

            <ImageView
                android:id="@+id/img_word_15"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_d" />

            <ImageView
                android:id="@+id/img_word_16"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_a" />

            <ImageView
                android:id="@+id/img_word_17"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/letter_i" />


        </LinearLayout>

        <include layout="@layout/layout_speak"/>

    </LinearLayout>


</RelativeLayout>