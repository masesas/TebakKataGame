<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationZ="90dp">

        <ImageView
            android:id="@+id/img_star_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_star"
            tools:ignore="ContentDescription,UseAppTint" />

        <ImageView
            android:id="@+id/img_star_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="-20dp"
            android:src="@drawable/ic_star"
            tools:ignore="ContentDescription,UseAppTint" />

        <ImageView
            android:id="@+id/img_star_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_star"
            tools:ignore="ContentDescription, UseAppTint" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/container_card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/three_star_description"
                android:textColor="@color/grey_800"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img_btn_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_home_resize" />

                <ImageButton
                    android:id="@+id/img_btn_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_x_resize" />

                <ImageButton
                    android:id="@+id/img_btn_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/white"
                    android:src="@drawable/ic_next_resize" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>